<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            style="@style/SettingsHeaderTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/info_sessions" />

        <View style="@style/SettingsHeader" />

        <com.sixbynine.infosessions.ui.CheckableTextView
            android:id="@+id/settings_coop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:checked="true"
            android:text="@string/show_coop_tab" />

        <View style="@style/SettingsDivider" />

        <com.sixbynine.infosessions.ui.CheckableTextView
            android:id="@+id/settings_graduate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:checked="true"
            android:text="@string/show_graduate_tab" />

        <View style="@style/SettingsDivider" />

        <com.sixbynine.infosessions.ui.CheckableTextView
            android:id="@+id/settings_past"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:checked="false"
            android:text="@string/show_past_sessions" />

        <View style="@style/SettingsDivider" />



        <TextView
            style="@style/SettingsHeaderTextView"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tabs" />

        <View style="@style/SettingsHeader" />

        <com.sixbynine.infosessions.ui.HeaderSubheaderView
            android:id="@+id/settings_program"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            app:hsvHeaderText="@string/interested_programs" />

        <View style="@style/SettingsDivider" />

        <com.sixbynine.infosessions.ui.CheckableTextView
            android:id="@+id/settings_today_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:checked="true"
            android:text="@string/show_today_tab" />

        <View style="@style/SettingsDivider" />



        <TextView
            style="@style/SettingsHeaderTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/alerts" />

        <View style="@style/SettingsHeader" />

        <com.sixbynine.infosessions.ui.CheckableTextView
            android:id="@+id/settings_vibrate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:checked="true"
            android:text="@string/alerts_vibrate" />

        <View style="@style/SettingsDivider" />

        <com.sixbynine.infosessions.ui.CheckableTextView
            android:id="@+id/settings_sound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:checked="true"
            android:text="@string/alerts_sound" />

        <View style="@style/SettingsDivider" />

        <com.sixbynine.infosessions.ui.CheckableTextView
            android:id="@+id/settings_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:checked="true"
            android:text="@string/alerts_light" />

        <View style="@style/SettingsDivider" />


    </LinearLayout>

</ScrollView>