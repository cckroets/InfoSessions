<resources>

    <style name="InfoSessionCompanyLabel">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ff9a9a9a</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="InfoSessionCompanyValue">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="InfoSessionCompanyValuePrimary" parent="InfoSessionCompanyValue">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff005093</item>
    </style>

    <style name="InfoSessionCompanyName">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="SettingsDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#88888888</item>
    </style>

    <style name="SettingsHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#888888</item>
    </style>

    <style name="SettingsHeaderTextView">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

</resources>
